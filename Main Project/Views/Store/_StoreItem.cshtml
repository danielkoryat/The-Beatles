@model Main_Project.interfaces.IShoppingItem

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="shop-item">
    <span class="shop-item-title">@Model.Name</span>
    <img class="shop-item-image" src="@Url.Content($"~/{Model.Photo}")" alt="merchandise image">
    <div class="shop-item-details">
        <span class="shop-item-price">@Model.Price$</span>
        <form asp-action="AddToCart" method="post" >
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="number" name="quantity" value="1" min="1" class="form-control" />
            <input type="hidden" name="type" value="@Model.GetType().Name" />
            <button class="btn btn-primary shop-item-button" type="submit">ADD TO CART</button>
        </form>
    </div>
</div>
