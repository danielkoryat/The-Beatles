@{
}

<div class="tour-row">
    <span class="tour-item tour-date">@Model.Date.ToString("MMM d")</span>
    <span class="tour-item tour-city">@Model.City</span>
    <span class="tour-item tour-arena">@Model.Arena</span>
    <form asp-action="PurchaseTicket" method="post">
        <input type="hidden" name="tourId" value="@Model.Id" />
        <button type="button" class="tour-item tour-btn btn btn-primary">BUY TICKETS</button>
    </form>
</div>